---
interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;
---

<main class="grow">
  {
    "titleTransition" in props ? (
      <h1 class="text-2xl tracking-wider sm:text-3xl pt-6 font-bold">
        {props.pageTitle[0]}
        <span transition:name={props.titleTransition}>
          {props.pageTitle[1]}
        </span>
      </h1>
    ) : (
      <h1 class="text-2xl tracking-wider sm:text-3xl pt-6 font-bold">
        {props.pageTitle}
      </h1>
    )
  }
  <p class="pb-6">{props.pageDesc}</p>
  <slot />
</main>
